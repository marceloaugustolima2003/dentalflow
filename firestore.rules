rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Only allow users to access their own data
    match /users/{userId} {
      allow read, write: if request.auth.uid == userId &&
                             (request.auth.token.activeSubscription == true || request.auth.token.role == 'admin');
    }

    // You can add other collections here with similar security rules
    // For example, if you have a 'products' collection:
    // match /products/{productId} {
    //   allow read: if request.auth.token.activeSubscription == true || request.auth.token.role == 'admin';
    //   allow write: if request.auth.token.role == 'admin'; // Only admins can write to products
    // }
  }
}
